    <TextView
        android:id="@+id/editUserName"
        android:layout_width="317dp"
        android:layout_height="133dp"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="68dp"
        android:gravity="center"
        android:text="My Tasks"
