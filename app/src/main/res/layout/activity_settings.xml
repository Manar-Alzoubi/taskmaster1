<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="13dp"
        android:text="username : "
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintStart_toStartOf="@+id/username" />


    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="184dp"
        android:autofillHints=""
        android:inputType="textPostalAddress"
        android:text="enter username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="42dp"
        android:text="choose your team : "
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toTopOf="@+id/teamSpinner"
        app:layout_constraintStart_toStartOf="parent" />

    <!--    <Spinner-->
    <!--        android:id="@+id/teamSpinner1"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="19dp"-->
    <!--        android:entries="@array/teams_array"-->
    <!--        android:textSize="15sp"-->
    <!--        app:layout_constraintEnd_toEndOf="@+id/textView8"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/textView8" />-->

    <Spinner
        android:id="@+id/teamSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:entries="@array/teams_array"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:enabled="false"
        android:text="submit"
        app:layout_constraintStart_toEndOf="@+id/teamSpinner"
        app:layout_constraintTop_toBottomOf="@+id/teamSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>